{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "test": "lerna run test",
    "test:integration": "lerna run test:integration",
    "lint": "eslint packages --ext .ts,.tsx",
    "version:prerelease": "lerna version --conventional-commits --conventional-prerelease -m \"chore: publish\"",
    "version:release": "lerna version --conventional-commits --conventional-graduate -m \"chore: publish\"",
    "publish": "lerna publish from-git --loglevel=verbose --no-verify-access --yes"
  }
}
